mixin crearProyecto(proyecto ={})
    pre=vardump(proyecto)
    form.agregar-proyecto(action=`/nuevo-proyecto${!proyecto.id ? '' : (proyecto.id)}` method='POST')
        .campo 
            label(for="nombre") Nombre Proyecto:
            input(value=proyecto.nombre type="text" id='nombre' name='nombre' placeholder="Nombre del proyecto")
        .campo.enviar
            input(type="submit" value=`${proyecto.nombre ? 'Actualizar' : 'Agregar'}`).boton 