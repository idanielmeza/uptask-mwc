doctype html
html(lang="es")
    head
        include partials/header
    body.login
        .contenedor-formulario
            h1 Iniciar Sesion 

            if error 
                p.alerta.error #{error}

            form#formulario.caja.caja-login(method="post" action="/iniciar-sesion")
                .campo 
                    label(for='email') E-mail
                    input(type='email' name='email' placeholder='E-mail' value=`${email ? (email) : ''}`)
                .campo 
                    label(for='password') Contraseña
                    input(type='password' name='password' placeholder='Contraseña')

                .campo.enviar
                    input.boton(type='submit' value='Conectar')
                .campo.acciones 
                    a(href="/crear-cuenta") Registrarme

                    a(href="/restablecer") Recuperar contraseña
